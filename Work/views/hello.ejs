<%- include ('header.ejs') %>

    <div class="bodyContainer">
        <h1><%= title %></h1>
        <ol>
            <% _.each(items, function(topC) { %>
            <li>
                <h1><%= topC.name %></h1>
                <p><%= topC.page_description %></p>
                <% if (topC.image) { %>
                <div>
                    <img src="/images/<%= topC.image %>">
                </div>
                <% } %>
                <div>
                    <ol>
                        <% _.each(topC.categories, function(subC) { %>
                        <li>
                            <h2><%= subC.name %></h1>
                            <p><%= subC.page_description %></p>
                            <% if (subC.image) { %>
                            <div>
                                <img src="/images/<%= subC.image %>">
                            </div>
                            <% } %>

                            <% _.each(subC.categories, function(subSubC) { %>
                                <li>
                                    <h2><%= subSubC.name %></h1>
                                    <p><%= subSubC.page_description %></p>
                                    <% if (subSubC.image) { %>
                                    <div>
                                        <img src="/images/<%= subSubC.image %>">
                                    </div>
                                    <% } %>
                                </li>
                                <% }); %> 

                        </li>
                        <% }); %>                    
                    </ol>
                </div>    
            </li>
            <% }); %>
        </ol>
    </div>

<%- include ('footer.ejs') %>